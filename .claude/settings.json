{
  "permissions": {
    "allow": [
      "Bash(rg:*)",
      "Bash(tmux list-sessions:*)",
      "Bash(tmux show-options:*)",
      "Bash(tmux set-window-option:*)",
      "Bash(tmux list-panes:*)",
      "Bash(tmux show-window-options:*)",
      "Bash(tmux bind-key:*)",
      "Bash(tmux list-windows:*)",
      "Bash(tmux rename-window:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env.*)",
      "Bash(kill:*)",
      "WebSearch"
    ]
  },
  "env": {
    "USE_BUILTIN_RIPGREP": 1
  }
}
